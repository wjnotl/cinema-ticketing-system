@model ResetPasswordVM

@{
    ViewBag.Title = "Reset Password | Supershow";
}

<div class="form-container container-center">
    <div class="title">Reset Password</div>
    <form method="post" data-expired-timestamp="@ViewBag.ExpiredTimestamp">
        <div class="form-group">
            <label asp-for="Password"></label>
            <div class="form-input">
                <input asp-for="Password" placeholder="Enter a new password" />
                <input type="checkbox" class="password-show-button">
            </div>
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <div class="form-input">
                <input asp-for="ConfirmPassword" placeholder="Enter the new password again" />
                <input type="checkbox" class="password-show-button">
            </div>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>

        <div class="form-group">
            <button class="button-full" type="submit" data-button="yellow">Reset Password</button>
        </div>
    </form>
</div>