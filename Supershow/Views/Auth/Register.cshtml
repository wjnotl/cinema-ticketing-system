@model RegisterVM

@{
    ViewBag.Title = "Register | Supershow";
}

<div class="form-container container-center">
    <div class="title">Welcome to Supershow Malaysia</div>

    <form method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <div class="form-input">
                <input asp-for="Name" placeholder="Enter your name" />
            </div>
            <span asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <div class="form-input">
                <input asp-for="Email" placeholder="Enter your email address" />
            </div>
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <div class="form-input">
                <input asp-for="Password" placeholder="Enter your password" />
                <input type="checkbox" class="password-show-button">
            </div>
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <div class="form-input">
                <input asp-for="ConfirmPassword" placeholder="Enter your password again" />
                <input type="checkbox" class="password-show-button">
            </div>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>

        <div class="form-group">
            <button data-button="yellow" type="submit">Register</button>
        </div>

        <div class="form-group">
            Have an account?
            <a href="/Auth/Login" data-preserve-search-params>&nbspLogin</a>
        </div>
    </form>

</div>