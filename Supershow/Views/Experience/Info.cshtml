@model Experience

@{
    ViewBag.Title = "Experience Info | Supershow";
}

@section head {
    <style>
        .banner-container>img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .banner-overlay-vertical {
            position: absolute;
            inset: 0;
            background-image: linear-gradient(transparent 40%, var(--background-color) 100%);
        }

        .banner-content {
            position: absolute;
            inset: 0;
        }

        .banner-content>.container {
            position: absolute;
            bottom: 0;
            margin-bottom: 50px;
        }

        .banner-content h1 {
            font-size: 50px;
            margin: 10px 0;
        }

        .banner-content h3 {
            font-size: 30px;
            margin: 10px 0;
        }

        .experience-info-container {
            padding-bottom: 25px;
            display: flex;
            gap: 50px;
        }

        .experience-info-container h3 {
            margin: 10px 0;
        }

        .experience-info-container p {
            white-space: pre-line;
        }
    </style>
}

<div class="banner-container">
    <img src="/uploads/experience/@Model.Banner">
    <div class="banner-overlay-vertical"></div>
    <div class="banner-content">
        <div class="container">
            <h3>@Model.Name</h3>
            <h1>@Model.TagLine</h1>
            <a id="buy-tickets-link" href="/Experience/Showtimes/@Model.Slug" data-button="yellow">Buy Tickets</a>
        </div>
    </div>
</div>

<div class="container">
    <div class="experience-info-container">
        <div>
            <h3>Description:</h3>
            <p>@Model.Description</p>
        </div>
    </div>

    <div class="experience-info-container">
        <div>
            <h3>Includes:</h3>
            <p>@Model.Includes</p>
        </div>
    </div>
</div>