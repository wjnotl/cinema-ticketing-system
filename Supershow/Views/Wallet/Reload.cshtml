@model ReloadVM

@{
    ViewBag.Title = "Reload Wallet | Supershow";
}

<form class="form-container container-center" method="post">
    <div class="title">Reload</div>
    <div class="form-group">
        <label asp-for="Amount">Amount (RM)</label>
        <div class="form-input">
            <input type="number" asp-for="Amount" placeholder="0.00" data-rm-format>
        </div>
        <span asp-validation-for="Amount"></span>
    </div>
    <div class="form-group">
        <button type="submit" data-button="yellow">Top Up</button>
    </div>
</form>